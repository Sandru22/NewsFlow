<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsFlow.ForgotPassword.NewPasswordPage"
             Title="NewPasswordPage"
             BackgroundColor="White"
             xmlns:navigation="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
            navigation:NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout VerticalOptions="Center">
        <VerticalStackLayout.BackgroundColor>
            <OnPlatform x:TypeArguments="Color">
                <On Platform="WinUI" Value="LightGray"/>
                <On Platform="Android, iOS" Value="White"/>
            </OnPlatform>
        </VerticalStackLayout.BackgroundColor>
        <VerticalStackLayout.WidthRequest>
            <OnPlatform x:TypeArguments="x:Double">
                <On Platform="WinUI" Value="600"/>
                <On Platform="Android, iOS" Value="-1"/>
            </OnPlatform>
        </VerticalStackLayout.WidthRequest>
        <VerticalStackLayout.HeightRequest>
            <OnPlatform x:TypeArguments="x:Double">
                <On Platform="WinUI" Value="500"/>
                <On Platform="Android, iOS" Value="-1"/>
            </OnPlatform>
        </VerticalStackLayout.HeightRequest>

        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            <Label Text="Resetează parola" 
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#333"/>

            <Entry x:Name="PasswordEntry" 
               Placeholder="Parolă nouă" 
               IsPassword="True"
               BackgroundColor="#f0f0f0"
               Margin="0,10"
               HeightRequest="20"
               TextColor="Black"/>

            <!-- Confirmare parolă -->
            <Entry x:Name="ConfirmPasswordEntry" 
               Placeholder="Confirmă parola nouă" 
               IsPassword="True"
               BackgroundColor="#f0f0f0"
               Margin="0,10"
               HeightRequest="50"
               TextColor="Black"/>

            <!-- Buton resetare -->
            <Button Text="Resetează parola" 
                Clicked="OnResetPasswordClicked" 
                BackgroundColor="#007aff"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                FontSize="16"/>

            <!-- Indicator încărcare -->
            <ActivityIndicator x:Name="LoadingIndicator" 
                           IsVisible="False" 
                           IsRunning="False"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>